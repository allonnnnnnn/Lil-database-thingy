{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/",
        "function": "app"
      },
      {
        "source": "/getData",
        "function": "app"
      },
      {
        "source": "/add",
        "function": "app"
      },
      {
        "source": "/updateData",
        "function": "app"
      },
      {
        "source": "/delete",
        "function": "app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
